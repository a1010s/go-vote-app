<!DOCTYPE html>
<html>
<head>
    <title>{{.Question}}</title>
    <style>
        body {
            background-color: #333;
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #667580;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .vote-button {
            width: 150px;
            height: 60px;
            font-size: 18px;
            margin: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .vote-button:hover {
            background-color: #4caf50;
        }
        .result {
            font-size: 24px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>{{.Question}}</h1>
        <div>
            <button class="vote-button" onclick="vote('Option 1')">{{.Option1}}</button>
            <button class="vote-button" onclick="vote('Option 2')">{{.Option2}}</button>
        </div>
        <div class="result">
            <p>Option 1 Votes: <span id="option1-votes">{{.Option1Votes}}</span></p>
            <p>Option 2 Votes: <span id="option2-votes">{{.Option2Votes}}</span></p>
        </div>
    </div>

    <script>
        function vote(option) {
            fetch('/vote', {
                method: 'POST',
                body: 'vote=' + option,
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                }
            })
            .then(response => {
                if (response.ok) {
                    return response.json();
                }
                throw new Error('Network response was not ok.');
            })
            .then(data => {
                document.getElementById('option1-votes').innerText = data.Option1Votes;
                document.getElementById('option2-votes').innerText = data.Option2Votes;
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    </script>
</body>
</html>
